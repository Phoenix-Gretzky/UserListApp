<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/itemFragment">

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.myapplication.ui.fragments.UserListFragment"
        android:label="fragment_item_list"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/action_itemFragment_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.example.myapplication.ui.fragments.UserDetailsFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_user_details" >
        <argument
            android:name="position"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
</navigation>